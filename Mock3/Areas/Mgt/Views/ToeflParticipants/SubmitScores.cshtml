@model Mock3.Areas.Mgt.ViewModels.SubmitScoresForParticipantViewModel
@{
    ViewBag.Title = "ثبت نمرات";
}


<div class="container">
    @using (Html.BeginForm("SubmitScores", "ToeflParticipants", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.UserExamId)
        @Html.HiddenFor(x => x.ExamId)
        <h4>ثبت نمرات آزمون دهنده</h4>
        <hr />
        <p>
            جزئیات آزمون:
            @Model.ExamDesc
        </p>
        <p>
            نام و نام خانوادگی:
            @Model.FullName
        </p>
        <p>
            آدرس ایمیل:
            @Model.Email
        </p>
        <p>
            کدملی:
            @Model.NationalCode
        </p>
        <div class="form-group">
            @Html.LabelFor(m => m.ReadingScore, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.ReadingScore, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.ReadingScore, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ListeningScore, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.ListeningScore, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.ListeningScore, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.SpeakingScore, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.SpeakingScore, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.SpeakingScore, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.WritingScore, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.WritingScore, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.WritingScore, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="ثبت اطلاعات" />
            </div>
        </div>

    }

</div>