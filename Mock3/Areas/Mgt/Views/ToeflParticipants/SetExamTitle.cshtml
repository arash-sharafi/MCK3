@model Mock3.Areas.Mgt.ViewModels.SetExamTitleForParticipantViewModel
@{
    ViewBag.Title = "ثبت عنوان آزمون";
}


<div class="container">
    @using (Html.BeginForm("SetExamTitle", "ToeflParticipants", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.UserExamId)
        @Html.HiddenFor(x => x.ExamId)
        <h4>ثبت عنوان آزمون</h4>
        <hr />
        <p>
            جزئیات آزمون:
            @Model.ExamDesc
        </p>
        <p>
            نام و نام خانوادگی:
            @Model.FullName
        </p>
        <p>
            آدرس ایمیل:
            @Model.Email
        </p>
        <p>
            کدملی:
            @Model.NationalCode
        </p>
        <div class="form-group">
            @Html.LabelFor(m => m.ExamTitleId, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.ExamTitleId, new SelectList(Model.ExamTitles, "Id", "Title"), "عنوان آزمون را انتخاب نمایید", new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.ExamTitleId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="ثبت اطلاعات" />
            </div>
        </div>

    }

</div>
