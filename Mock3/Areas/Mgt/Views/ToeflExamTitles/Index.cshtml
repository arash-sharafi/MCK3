@model IEnumerable<Mock3.Models.ExamTitle>
@{
    ViewBag.Title = "Index";
}


<div class="container">
    <h2>مدیریت عنوانها</h2>
    <br />
    @Html.ActionLink("عنوان جدید", "Create", null, new { @class = "btn btn-primary" })
    <hr/>
    <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
                <td>عنوان آزمون</td>
                <td></td>
            </tr>
            </thead>
            @foreach (var exam in Model)
            {
                <tr>
                    <td class="table-cell">@exam.Title</td>
                    <td>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">

                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">عملیات<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("ویرایش عنوان", "Edit", "ToeflExamTitles", new { id = @exam.Id }, null)</li>
                            </ul>
                            <li />
                        </ul>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>